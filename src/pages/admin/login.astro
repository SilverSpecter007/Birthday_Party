---
import '../../styles/global.css';
import { signSession } from '../../middleware';

let error = '';

if (Astro.request.method === 'POST') {
  const formData = await Astro.request.formData();
  const password = formData.get('password')?.toString() || '';
  const adminPassword = import.meta.env.ADMIN_PASSWORD || 'default-change-me';

  if (password === adminPassword) {
    const sessionValue = signSession(Date.now());
    Astro.cookies.set('admin_session', sessionValue, {
      path: '/',
      httpOnly: true,
      sameSite: 'lax',
      maxAge: 60 * 60 * 24, // 24 hours
    });
    return Astro.redirect('/admin');
  } else {
    error = 'Falsches Passwort.';
  }
}
---
<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Admin Login</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet" />
</head>
<body class="min-h-screen bg-[var(--color-bg-dark)] flex items-center justify-center px-4">
  <div class="w-full max-w-sm">
    <h1 class="font-[var(--font-display)] text-2xl text-[var(--color-gold)] text-center mb-8">
      Admin-Bereich
    </h1>

    {error && (
      <div class="mb-4 p-3 bg-red-900/30 border border-red-500/30 rounded-lg text-red-300 text-sm text-center">
        {error}
      </div>
    )}

    <form method="POST" class="space-y-4">
      <div>
        <label for="password" class="block text-sm font-medium text-[var(--color-cream)] mb-1">
          Passwort
        </label>
        <input
          type="password"
          id="password"
          name="password"
          required
          autofocus
          class="w-full px-4 py-2 bg-[var(--color-form-bg)] border border-[var(--color-form-border)] rounded-lg text-[var(--color-cream)] focus:outline-none focus:border-[var(--color-gold)] transition-colors"
          placeholder="Admin-Passwort"
        />
      </div>
      <button
        type="submit"
        class="w-full py-2 bg-[var(--color-gold)] text-[var(--color-bg-dark)] font-bold rounded-lg hover:bg-[var(--color-gold-light)] transition-colors cursor-pointer"
      >
        Anmelden
      </button>
    </form>
  </div>
</body>
</html>
