---
import '../styles/global.css';
import Sparkles from '../components/Sparkles.astro';
import DiscoBall from '../components/DiscoBall.astro';
import { EVENT } from '../lib/config';

interface Props {
  title?: string;
}

const { title = `${EVENT.title} - ${EVENT.hosts}` } = Astro.props;
---
<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={`Einladung zum ${EVENT.title} von ${EVENT.hosts}`} />
  <title>{title}</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Great+Vibes&family=Lato:wght@300;400;700&family=Playfair+Display:wght@700;900&display=swap" rel="stylesheet" />
</head>
<body class="min-h-screen bg-[var(--color-bg-dark)] overflow-x-hidden">
  <div class="vignette"></div>
  <Sparkles />

  <main class="relative z-10 flex items-center justify-center min-h-screen px-4 py-8">
    <div class="relative w-full max-w-lg">
      <DiscoBall />
      <slot />
    </div>
  </main>
</body>
</html>
